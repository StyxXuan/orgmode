<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_item_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F2FDF9"
    android:orientation="vertical">

    <include layout="@layout/file_additem1"/>
    <include layout="@layout/file_additem2"/>
    <include layout="@layout/file_additem3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fileadd_state"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@mipmap/fileadd_state"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/fileadd_priority"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:background="@mipmap/fileadd_priority"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/fileadd_tag"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:background="@drawable/fileadd_tag"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/fileadd_shcedule"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/fileadd_shcedule"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/fileadd_deadline"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:background="@drawable/fileadd_deadline"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/fileadd_showon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:background="@drawable/fileadd_showon"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/fileadd_change"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="160dp"
            android:background="@drawable/fileadd_change"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="16dp" />

    </LinearLayout>


</LinearLayout>