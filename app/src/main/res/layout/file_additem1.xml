<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F2FDF9"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/file_add_down"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_arrow_down"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="16dp" />

        <TextView
        android:id="@+id/file_add_double_left"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:background="@mipmap/fileadd_left"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="16dp" />

        <TextView
            android:id="@+id/file_add_double_right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:background="@mipmap/fileadd"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/file_add_double_up"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:background="@mipmap/fileadd_up"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/file_add_double_down"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:background="@mipmap/fileadd_down"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/file_add_after"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:background="@mipmap/fileadd_after"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="16dp" />

        <TextView
        android:id="@+id/file_add_before"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:background="@mipmap/fileadd_before"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="16dp" />

        <TextView
            android:id="@+id/file_add_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:background="@mipmap/fileadd_delete"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="16dp" />

    </LinearLayout>


</LinearLayout>